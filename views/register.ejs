  </body>
  <script src="/javascripts/jquery-3.7.0.min.js"></script>
  <script>
    function checkDu() {
      if (
        $("#name").val() != "" &&
        $("#email").val() != "" &&
        $("#password").val() != ""
      ) {
        $.ajax("/checkDup", {
          method: "POST",
          data: { email: $("#email").val() },
          success: function (result) {
            if (result.status) {
              alert("Email is duplicte");
              $("#email").val("");
              $("#email").focus();
            } else {
              $("form").submit();
            }
          },
        });
      } else {
        alert("Please fill all fields");
      }
    }
  </script>
