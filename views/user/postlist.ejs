<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Post List</title>
  </head>
  <body>
    <h1>Post List</h1>
    <table>
      <thead>
        <th>No</th>
        <th>Title</th>
        <th>Content</th>
        <th>Author</th>
        <th>Image</th>
      </thead>
      <tbody>
        <% for(var i = 0; i < posts.length; i++){%>
        <tr>
          <td><%= i+1 %></td>
          <td>
            <a href="/users/postdetail/<%= posts[i]._id %>"
              ><%= posts[i].title %></a
            >
          </td>
          <td><%= posts[i].content %></td>
          <td><%= posts[i].author.name %></td>
          <td>
            <img
              src="<%= posts[i].image%>"
              alt=""
              width="100px"
              height="100px"
            />
          </td>
        </tr>
        <%}%>
      </tbody>
    </table>
  </body>
</html>
